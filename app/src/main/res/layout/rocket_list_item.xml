<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/rocket_list_item_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        xmlns:tools="http://schemas.android.com/tools">

    <TextView
            android:id="@+id/rocket_list_item_text_view_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="8dp"
            tools:text="Falcon 9"
            android:textColor="@color/space_x_blue"
            android:textStyle="bold"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:gravity="center_vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rocket_list_engines_label"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

        <TextView
                android:id="@+id/rocket_list_item_text_view_engine_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="8dp"
                tools:text="9"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rocket_list_country_label"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

        <TextView
                android:id="@+id/rocket_list_item_text_view_country"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="01/01/2011"
                android:paddingStart="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

    </LinearLayout>

</LinearLayout>