<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/rocket_list_item_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/rocket_list_item_text_view_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="8dp"/>

    <TextView
            android:id="@+id/rocket_list_item_text_view_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="8dp"/>

    <TextView
            android:id="@+id/rocket_list_item_text_view_engine_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="8dp"/>

</LinearLayout>